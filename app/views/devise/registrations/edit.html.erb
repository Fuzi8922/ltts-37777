<%= render "shared/header" %>

<div class = "edit-form">
  <h2>ユーザー情報の編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :アイコン %><br />
      <% if @user.image.present? %>
        <%= image_tag @user.image %>
      <% else %>
        <%= "アイコンなし" %>
      <% end %>
      <%= f.file_field :image, class: "image" %>
    </div> 

    <div class="field">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :紹介文 %><br />
      <%= f.text_area :profile_text %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :パスワード %>(変更しない場合は空欄で可)<br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <%= @minimum_password_length %>文字以上は必須です
      <% end %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :現在のパスワード %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "情報を更新する" %>
    </div>
  <% end %>

  <%= link_to "変更を保存せず戻る", :back %>
</div>