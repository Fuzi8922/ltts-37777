<header>
  <div class = "header-contents">
    <div class = "header-left">
      <%= link_to "LttS", root_path %>
    </div>
    <div class="header-center">
      <%= form_with(url: search_reviews_path, local: true, class: "search-form", method: :get) do |f| %>
        <%= f.text_area :keyword, placeholder: "ENTER KEYWORD" %>
        <%= f.submit "SEARCH", class: "search-button" %>
      <% end %>
    </div>
    <div class = "header-right">
      <% if user_signed_in? %>
        <%= link_to "POST REVIEW", new_review_path, class:"new-review" %>
        <%= link_to "LOG OUT", destroy_user_session_path, class: "logout", method: :delete %>
      <% else %>
        <%= link_to "SIGN IN", new_user_session_path, class: "login" %>
        <%= link_to "SIGN UP", new_user_registration_path, class: "new-registration" %>
      <% end %>
    </div>
  </div>
</header>